<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VitaCare.MainPage"
             Title="Início">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25" VerticalOptions="Center">

            <!-- Imagem de topo -->
            <Image  Source="vita_care_logo.png"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    SemanticProperties.Description="logotipo do aplicativo" />

            <!-- Botões de navegação -->
            <!--
            <Button Text="Usuários"
                    Clicked="OnUsuariosClicked"
                    BackgroundColor="#4169E1"
                    TextColor="White" />
            -->

            <Button Text="Consultas"
                    Clicked="OnConsultasClicked"
                    BackgroundColor="#4169E1"
                    TextColor="White" />

            <Button Text="Medicamentos"
                    Clicked="OnMedicamentosClicked"
                    BackgroundColor="#4169E1"
                    TextColor="White" />

            <Button Text="Enfermidades"
                    Clicked="OnEnfermidadesClicked"
                    BackgroundColor="#4169E1"
                    TextColor="White" />

            <!-- Botão de sair -->
            <Button Text="Sair"
                    Clicked="OnSairClicked"
                    BackgroundColor="#4169E1"
                    TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
